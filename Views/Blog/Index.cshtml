<!DOCTYPE HTML>
<html>
<head>

    <link href="~/web2/css/bootstrap.css" rel='stylesheet' type='text/css' />
    <link href="~/web2/css/style.css" rel='stylesheet' type='text/css' />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Personal Blog Responsive web template, Bootstrap Web Templates, Flat Web Templates, Andriod Compatible web template,
	Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyErricsson, Motorola web design" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!----webfonts---->
    <link href='http://fonts.googleapis.com/css?family=Oswald:100,400,300,700' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Lato:100,300,400,700,900,300italic' rel='stylesheet' type='text/css'>





</head>
<body>
    <!---header---->
    <div class="header">
        <div class="container">

            <!---start-top-nav---->

            <div class="clearfix"></div>

        </div>
    </div>
    <!--/header-->
    <div class="single">
        <div class="container">
            <div class="col-md-8 single-main">
                @foreach (var x in Model.Deger1)
                {
                <div class="single-grid">




                    <img src="@x.BlogImage" alt="" style="margin-bottom:20px" />

                    <a href="/Default/BlogDetay/@x.BlogID">@x.BlogTitle </a>
                    <p>
                        @x.BlogContent.Substring(0, x.BlogContent.Substring(0, 250).LastIndexOf(" "))...

                    </p>
                    <p><a href="/Default/BlogDetay/@x.BlogID"><span class="read">Devamını oku >></span></a></p>
                </div>
                    <br /><br />


                }

            </div>

            <div class="col-md-4 side-content">
                <div class="recent">
                    <h2>Son Bloglar</h2>
                    @foreach (var y in Model.Deger3)
                    {


                        <ul>
                            <li><a href="/Default/BlogDetay/@y.BlogID"><b>@y.BlogTitle</b></a></li>

                        </ul>

                    }
                </div>
                <div class="comments">
                    <h2>Son Yorumlar</h2>
                    @foreach (var z in Model.Deger2)
                    {
                        <ul>

                            <li><a href="/Blog/YorumDetay/@z.CommentID" style="font-size:15px"><b>@z.CommentTitle</b></a></li>
                        </ul>
                    }

                </div>
                <div class="comments">
                    <h2>Kategoriler</h2>

                    <ul class="list list-pad">
                        @{ int i = 0;}
                        @foreach (var t in Model.Deger4)
                        {
                            @*<li class="list-bg"><span>@{i++; } @i.</span>@t.CategoryName</li>*@
                            <li class="list-bg"><a href="/Blog/BlogByCategory/@t.CategoryID"><span style="font-size:15px">@{i++; } @i.</span><b style="font-size:20px">@t.CategoryName</b></a></li>
                        }


                    </ul>

                </div>
                <br />
                <h3>Toplam Blog Sayısı: @ViewBag.d1</h3>
                <h3>Toplam Kategori Sayısı: @ViewBag.d1</h3>

            </div>
            <div class="clearfix"></div>
        </div>
    </div>

    <!---->

</body>
</html>




